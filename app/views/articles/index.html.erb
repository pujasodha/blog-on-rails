<h1 class = "center">Listing All Articles </h1>


<%= link_to 'Create New Article', new_article_path, class: "create-article" %>


<div class = "article-listings">
<table>

<tr>
    <th>Title</th>
    <th>Description</th>
</tr>

<% @article.each do |article| %>

<tr>
    <td><%= article.title %> </td>
    <td><%= article.description %> </td>
    <td><%= link_to 'Edit ', edit_article_path(article), class: "action-items" %></td> 
    <td><%= link_to 'Show ', article_path(article), class: "action-items" %></td> 
    <td><%= link_to 'Delete', article_path(article), class: "action-items", method: :delete, data: {confirm: "Are you sure you want to delete the article? "} %></td>
</tr>


<% end %>

</table>
</div>